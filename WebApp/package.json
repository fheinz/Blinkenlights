{
    "name": "blinkenlights-demo",
    "version": "1.0.0",
    "description": "Proof-of-concept WebApp to control the Blinkenlights board.",
    "main": "script.js",
    "dependencies": {
        "@babel/preset-env": "^7.14.4",
        "@babel/runtime": "^7.16.0",
        "@joeattardi/emoji-button": "^4.6.0",
        "browserify": "^17.0.0",
        "browserify-css": "^0.15.0",
        "dropzone": "^5.9.2",
        "express": "^4.17.1",
        "gifuct-js": "^2.1.1",
        "socket.io": "^4.2.0",
        "watchify": "^4.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "babelify": "^10.0.0"
    },
    "browserify": {
        "transform": [
            [
                "babelify",
                {
                    "presets": [
                        "@babel/preset-env"
                    ]
                }
            ]
        ]
    },
    "scripts": {
        "build": "browserify -t browserify-css public/script.js public/blinken.js -o public/bundle.js; ",
        "build-blinkmoji": "browserify public/blinkmoji.js public/blinken.js -o public/bundle-blinkmoji.js ",
        "watch": "watchify public/script.js -o public/bundle.js -v",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fheinz/Blinkenlights.git"
    },
